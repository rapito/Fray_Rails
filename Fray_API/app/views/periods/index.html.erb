<% @periods.each do |period| %>
  <tr>
    <td><%= period.id %></td>
    <td><%= period.init_date %></td>
    <td><%= period.end_date %></td>
    <td><%= period.type %></td>
    <td><%= link_to 'Show', period %></td>
    <td><%= link_to 'Edit', edit_period_path(period) %></td>
    <td><%= link_to 'Destroy', period, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

