<h1>Listing periods</h1>

<p><a href="<%= new_period_path %>"class="btn btn-small btn-primary pull-right down_pusher"><%= I18n.t('fray.buttons.add_new') %></a></p>

<table>
  <tr>
    <th>Init date</th>
    <th>End date</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @periods.each do |period| %>
  <tr>
    <td><%= period.init_date %></td>
    <td><%= period.end_date %></td>
    <td><%= period.kind %></td>
    <td><%= link_to 'Show', period %></td>
    <td><%= link_to 'Edit', edit_period_path(period) %></td>
    <td><%= link_to 'Destroy', period, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


<% if @periods.length > 5  %>
    <p><a href="<%= new_period_path %>"class="btn btn-small btn-primary "><%= I18n.t('fray.buttons.add_new') %></a></p>
<% end %>

<%= will_paginate @posts %>
