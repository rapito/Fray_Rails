<h1>Listing users</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Enrollment code</th>
    <th>Enrollment outer code</th>
    <th>Studies</th>
    <th>Salary</th>
    <th>First name</th>
    <th>Middle name</th>
    <th>First last name</th>
    <th>Second last name</th>
    <th>Identification card</th>
    <th>Phone 1</th>
    <th>Phone 2</th>
    <th>Address 1</th>
    <th>Address 2</th>
    <th>Nationality</th>
    <th>Registration date</th>
    <th>Inactivity date</th>
    <th>Active</th>
    <th>Passport</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.kind %></td>
    <td><%= user.enrollment_code %></td>
    <td><%= user.enrollment_outer_code %></td>
    <td><%= user.studies %></td>
    <td><%= user.salary %></td>
    <td><%= user.first_name %></td>
    <td><%= user.middle_name %></td>
    <td><%= user.first_last_name %></td>
    <td><%= user.second_last_name %></td>
    <td><%= user.identification_card %></td>
    <td><%= user.phone_1 %></td>
    <td><%= user.phone_2 %></td>
    <td><%= user.address_1 %></td>
    <td><%= user.address_2 %></td>
    <td><%= user.nationality %></td>
    <td><%= user.registration_date %></td>
    <td><%= user.inactivity_date %></td>
    <td><%= user.active %></td>
    <td><%= user.passport %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

