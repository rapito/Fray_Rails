<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :suffix %><br />
    <%= f.text_field :suffix %>
  </div>

  <div class="field">
    <%= f.label :period %><br />
    <%= f.select :period_id , Period.all.collect{|x| [x.init_date.to_formatted_s(:long)  + '-' + x.end_date.to_formatted_s(:long) ,x.id] } %>
  </div>

    <div class="field">
      <%= f.label :teacher %><br />
      <%= f.select :teacher_id , User.all.reject{|x| x.kind == I18n.t('fray.student').to_s }.collect{|x| [x.first_name ,x.id] } %>
    </div>

  <div class="field">
    <%= f.label :stage %><br />
    <%= f.select :stage_id , Stage.all.collect{|x| [x.name ,x.id] } %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
