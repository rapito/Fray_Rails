<p id="notice"><%= notice %></p>
<h1><%= I18n.t('fray.models.group') + ' ' + @group.name %></h1>

<div class="field">
  <b>Suffix:</b>
  <%= @group.suffix %>
</div>

<div class="field">
  <b>Period:</b>
  <%= @group.period.init_date.to_formatted_s(:long)  + ' - ' + @group.period.end_date.to_formatted_s(:long) %>
</div>

<div class="field">
  <b>Teacher:</b>
  <%= @group.teacher.first_name + ' ' + @group.teacher.first_last_name  %>
</div>

<div class="field">
  <b>Stage:</b>
  <%= @group.stage.name %>
</div>

<br><br>
<table>
  <th><%= I18n.t('fray.buttons.students') %></th>
  <th><%= I18n.t('fray.users.name') %></th>
  <th><%= I18n.t('fray.users.enrollment_code') %></th>

<% @group.students.each do |student| %>

      <tr>
        <td></td>
        <td><%= user_get_name student %></td>
        <td><%= student.enrollment_code %></td>
      </tr>

<% end %>
</table>

<br /><br />
<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back',  '/groups/manage'  %>
