<h1><%= pluralize_this I18n.t('fray.models.teacher') %></h1>

<p><a href="<%= new_teacher_path %>" class="btn btn-small btn-primary pull-right down_pusher"><%= I18n.t('fray.buttons.add_new') %></a></p> <br />

<table  class="table table-striped table-hover table-condensed">
  <tr>
    <th>Studies</th>
    <th>Salary</th>
    <th>First name</th>
    <th>First last name</th>
    <th>Identification card</th>
    <th>Phone 1</th>
    <th>Address 1</th>
    <th>Nationality</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @teachers.each do |user| %>
  <tr>
    <td><%= user.studies %></td>
    <td><%= user.salary %></td>
    <td><%= user.first_name %></td>
    <td><%= user.first_last_name %></td>
    <td><%= user.identification_card %></td>
    <td><%= user.phone_1 %></td>
    <td><%= user.address_1 %></td>
    <td><%= user.nationality %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_teacher_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<% if @teachers.length > 5  %>
    <p><a href="<%= new_teacher_path %>" class="btn btn-small btn-primary pull-right"><%= I18n.t('fray.buttons.add_new') %></a></p>
<% end %>

<br />

