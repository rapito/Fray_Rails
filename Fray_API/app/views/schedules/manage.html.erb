<h1>Listing schedules</h1>

<p><a href="<%= new_schedule_path %>"class="btn btn-small btn-primary pull-right down_pusher"><%= I18n.t('fray.buttons.add_new') %></a></p>

<table>
  <tr>
    <th>Start time</th>
    <th>End time</th>
    <th>Day</th>
    <th></th>
    <th></th>
  </tr>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.start_time %></td>
    <td><%= schedule.end_time %></td>
    <td><%= schedule.day %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy', schedule, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<% if @schedules.length > 5  %>
    <p><a href="<%= new_schedule_path %>"class="btn btn-small btn-primary down_pusher"><%= I18n.t('fray.buttons.add_new') %></a></p>
<% end %>

<%= will_paginate @posts %>
